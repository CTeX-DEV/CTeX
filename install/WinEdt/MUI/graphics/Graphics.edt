        MUIGet('lbl_size', 'width', 7);
        MUIGet('lbl_size', 'top', 9);
    MUIAdd("%!7+2*%$(`g_margin`);","%!9-%$(`g_cor`);",0,0,'cmb_size','TComboBox','grp_size','Default|Fixed|Scale');
