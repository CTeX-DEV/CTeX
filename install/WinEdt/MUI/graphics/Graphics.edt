    MUIAdd("%!7+2*%$(`g_margin`);+3+%!5","%!9+%!8+2*%$(`g_cor`);",50,0, 'edt_fixht','TEdit','grp_size');
        MUISet('edt_fixht' ,'max length' ,'6');
        MUIGet('lbl_fixht', 'top', 9);
