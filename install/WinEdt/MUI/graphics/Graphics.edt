        MUISet('edt_fixwd' ,'max length' ,'6');
        MUIGet('lbl_fixwd', 'top', 9);
        MUIGet('lbl_fixwd', 'height', 8);
    MUIAdd("%$(`g_margin`);+%!5","%!9+%!8+%$(`g_pad`);",0,0,'lbl_fixht','TLabel','grp_size','Fixed Size Height:');
