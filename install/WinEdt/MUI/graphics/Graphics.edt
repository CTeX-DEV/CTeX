        MUIGet('lbl_llx', 'height', 8);
    MUIAdd("%!7+2*%$(`g_margin`);","4*%$(`g_margin`);-%$(`g_cor`);",50,0, 'edt_llx','TEdit','grp_bb');
        MUISet('edt_llx' ,'max length' ,'6');
        MUIGet('grp_bb', 'width', 7);
    MUIAdd("%!7/2+%$(`g_margin`);","4*%$(`g_margin`);",0,0,'lbl_lly','TLabel','grp_bb','LLY:');
